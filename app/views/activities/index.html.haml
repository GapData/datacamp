.clearfix
  %h1.fl= t(".all")

%table
  %tr
    %th= t(".identifier")
    %th= t(".field_name")
    %th= t(".old_field_value")
    %th= t(".user_name")
    
  - @activities.each do |activity|
    %tr
      %td= activity.dataset_description_identifier
      %td= activity.changed_field
      %td= activity.value
      %td= activity.user_name

.box= will_paginate @activities, :previous_label => t("global.previous"), :next_label => t("global.next")