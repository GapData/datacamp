<h1><%= @page.title %></h1>
<p>
  <%= @page.html_body.html_safe %>
</p>
<p>
  <div class="container prepend-top append-bottom prepend-1">
  <% for block in @blocks %>
    <div class='span-7 prepend-top'>
    <% if block.url!="" %><a href="<%= block.url %>"><% end %>
    <%= image_tag block.image.url(:standard) %><h2><%= block.title %></h2>
    <% if block.url!="" %></a><% end %>
    </div>
  <% end %>
  </div>
  <%= will_paginate @blocks, :previous_label => "&lt;", :next_label => "&gt;", :page_links => false, :id => "block_pagination" %>
</p>
